{
  "name": "vscode-chat-plugin",
  "displayName": "Chat Plugin",
  "description": "A VS Code extension for chatting with an AI assistant",
  "version": "0.0.1",
  "publisher": "younesbami",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/younesbami/vscode-chat-plugin.git"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-chat-plugin.startChat",
        "title": "Open AI Chat",
        "category": "Chat",
        "icon": "$(comment-discussion)"
      }
    ],
    "keybindings": [
      {
        "command": "vscode-chat-plugin.startChat",
        "key": "ctrl+i",
        "mac": "cmd+i",
        "when": "editorFocus || editorIsOpen"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm install",
    "compile": "echo Compiled",
    "package": "vsce package",
    "install-ext": "npm install && vsce package && code --install-extension vscode-chat-plugin-0.0.1.vsix"
  },
  "dependencies": {
    "ws": "^8.2.3"
  },
  "devDependencies": {
    "@vscode/vsce": "^2.15.0"
  }
}